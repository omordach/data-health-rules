{
  "name": "unionimpact/data-health-poc",
  "description": "POC: Laravel data health checks (single-tenant)",
  "type": "library",
  "license": "MIT",
  "require": {
    "php": "^8.2",
    "illuminate/support": "^10.0|^11.0|^12.0"
  },
  "require-dev": {
    "orchestra/testbench": "^9.0",
    "pestphp/pest": "^2.0",
    "pestphp/pest-plugin-laravel": "^2.0",
    "friendsofphp/php-cs-fixer": "^3.86",
    "phpstan/phpstan": "^2.1",
    "phpunit/phpunit": "^10.5",
    "nunomaduro/collision": "^8.4"
  },
  "autoload": {
    "psr-4": {
      "UnionImpact\\DataHealthPoc\\": "src/"
    },
    "classmap": [
      "database/seeders"
    ]
  },
  "extra": {
    "laravel": {
      "providers": [
        "UnionImpact\\DataHealthPoc\\DataHealthPocServiceProvider"
      ]
    }
  },
  "scripts": {
    "test": "pest",
    "test:cov": "pest --coverage --min=70 --coverage-html=coverage/html --coverage-clover=coverage/clover.xml",
    "lint": "PHP_CS_FIXER_IGNORE_ENV=1 php-cs-fixer fix --dry-run --diff",
    "lint:fix": "PHP_CS_FIXER_IGNORE_ENV=1 php-cs-fixer fix",
    "stan": "phpstan analyse --memory-limit=1G"
  },
  "config": {
    "allow-plugins": {
      "pestphp/pest-plugin": true
    }
  }
}
